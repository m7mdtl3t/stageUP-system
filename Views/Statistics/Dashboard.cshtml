@model VivuqeQRSystem.Models.AnalyticsDashboardViewModel

@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-white mb-3">
                <i class="fas fa-chart-line me-2 text-primary"></i>Analytics Dashboard
            </h2>
            
            <!-- Event Filter -->
            <div class="card vivuqe-card border-0 shadow-sm">
                <div class="card-body p-3">
                    <form method="get" class="row g-3 align-items-center">
                        <div class="col-md-4">
                            <label class="text-white-50 small mb-1">Filter by Event</label>
                            <select name="eventId" class="form-select" onchange="this.form.submit()">
                                <option value="">All Events</option>
                                @foreach (var evt in ViewBag.AllEvents as List<VivuqeQRSystem.Models.Event>)
                                {
                                    @if (Model.SelectedEvent?.EventId == evt.EventId)
                                    {
                                        <option value="@evt.EventId" selected>@evt.Name - @evt.Date.ToString("MMM dd, yyyy")</option>
                                    }
                                    else
                                    {
                                        <option value="@evt.EventId">@evt.Name - @evt.Date.ToString("MMM dd, yyyy")</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="text-white-50 small mb-1">&nbsp;</label>
                            <button type="button" class="btn btn-outline-light w-100" onclick="location.reload()">
                                <i class="fas fa-sync-alt me-1"></i>Refresh
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-white-50 small">Total Events</div>
                            <div class="h4 text-white mb-0">@Model.TotalEvents</div>
                            <small class="text-success"><i class="fas fa-check-circle"></i> @Model.ActiveEvents Active</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-info bg-opacity-10 text-info">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-white-50 small">Total Guests</div>
                            <div class="h4 text-white mb-0">@Model.TotalGuests</div>
                            <small class="text-white-50">@Model.TotalSeniors Seniors</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-success bg-opacity-10 text-success">
                                <i class="fas fa-user-check"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-white-50 small">Attended</div>
                            <div class="h4 text-white mb-0" id="totalAttendedCounter">@Model.TotalAttended</div>
                            <small class="text-success">@Model.AttendanceRate% Rate</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-white-50 small">Pending</div>
                            <div class="h4 text-white mb-0">@(Model.TotalGuests - Model.TotalAttended)</div>
                            <small class="text-warning">@(100 - Model.AttendanceRate)% Remaining</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row 1 -->
    <div class="row g-3 mb-4">
        <!-- Hourly Attendance Chart -->
        <div class="col-lg-8">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-bottom border-light border-opacity-10 p-3">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-clock me-2 text-primary"></i>Peak Hours Analysis
                    </h5>
                    <small class="text-white-50">Attendance by hour</small>
                </div>
                <div class="card-body">
                    <canvas id="hourlyChart" height="80"></canvas>
                </div>
            </div>
        </div>

        <!-- Time Distribution Pie -->
        <div class="col-lg-4">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-bottom border-light border-opacity-10 p-3">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-chart-pie me-2 text-info"></i>Time Distribution
                    </h5>
                    <small class="text-white-50">Attendance by time of day</small>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <canvas id="distributionChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row 2 -->
    <div class="row g-3 mb-4">
        <!-- Events Comparison -->
        <div class="col-lg-8">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-bottom border-light border-opacity-10 p-3">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-chart-bar me-2 text-success"></i>Events Comparison
                    </h5>
                    <small class="text-white-50">Attendance rate across events</small>
                </div>
                <div class="card-body">
                    <canvas id="eventsChart" height="80"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Events -->
        <div class="col-lg-4">
            <div class="card vivuqe-card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-bottom border-light border-opacity-10 p-3">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-trophy me-2 text-warning"></i>Top Events
                    </h5>
                    <small class="text-white-50">By attendance count</small>
                </div>
                <div class="card-body">
                    @if (Model.TopEvents.Any())
                    {
                        @foreach (var evt in Model.TopEvents)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom border-secondary border-opacity-25">
                                <div>
                                    <div class="text-white">@evt.EventName</div>
                                    <small class="text-white-50">@evt.EventDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="text-end">
                                    <div class="text-success fw-bold">@evt.AttendanceCount</div>
                                    <small class="text-white-50">@evt.AttendanceRate%</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-white-50 text-center my-4">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row g-3">
        <div class="col-12">
            <div class="card vivuqe-card border-0 shadow-sm">
                <div class="card-header bg-transparent border-bottom border-light border-opacity-10 p-3">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-history me-2 text-info"></i>Recent Check-ins
                    </h5>
                    <small class="text-white-50">Last 20 attendance records</small>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Guest</th>
                                    <th>Senior</th>
                                    <th>Event</th>
                                    <th>Time</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="recentActivityTableBody">
                                @if (Model.RecentActivity.Any())
                                {
                                    @foreach (var activity in Model.RecentActivity)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-user me-2 text-info"></i>
                                                @activity.GuestName
                                            </td>
                                            <td>
                                                <i class="fas fa-user-graduate me-2 text-primary"></i>
                                                @activity.SeniorName
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar me-2 text-warning"></i>
                                                @activity.EventName
                                            </td>
                                            <td>@activity.AttendanceTime.ToString("MMM dd, hh:mm tt")</td>
                                            <td class="text-end">
                                                <span class="badge bg-success">@activity.TimeAgo</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-white-50 py-4">
                                            No recent activity
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<script>
    // Chart.js Configuration with Dark Theme
    const chartConfig = {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
            legend: {
                labels: { color: '#fff' }
            }
        },
        scales: {
            x: {
                ticks: { color: '#adb5bd' },
                grid: { color: 'rgba(255,255,255,0.1)' }
            },
            y: {
                ticks: { color: '#adb5bd' },
                grid: { color: 'rgba(255,255,255,0.1)' }
            }
        }
    };

    // 1. Hourly Attendance Chart
    const hourlyData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.HourlyAttendance));
    new Chart(document.getElementById('hourlyChart'), {
        type: 'bar',
        data: {
            labels: hourlyData.map(h => h.hour),
            datasets: [{
                label: 'Check-ins',
                data: hourlyData.map(h => h.count),
                backgroundColor: 'rgba(13, 110, 253, 0.7)',
                borderColor: 'rgba(13, 110, 253, 1)',
                borderWidth: 1
            }]
        },
        options: chartConfig
    });

    // 2. Time Distribution Chart (Pie)
    const distribution = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Distribution));
    new Chart(document.getElementById('distributionChart'), {
        type: 'doughnut',
        data: {
            labels: ['Morning (6AM-12PM)', 'Afternoon (12PM-6PM)', 'Evening (6PM-12AM)', 'Night (12AM-6AM)'],
            datasets: [{
                data: [distribution.morning, distribution.afternoon, distribution.evening, distribution.night],
                backgroundColor: [
                    'rgba(255, 193, 7, 0.7)',
                    'rgba(13, 202, 240, 0.7)',
                    'rgba(111, 66, 193, 0.7)',
                    'rgba(108, 117, 125, 0.7)'
                ],
                borderWidth: 2,
                borderColor: '#1a1d20'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { color: '#fff', padding: 15 }
                }
            }
        }
    });

    // 3. Events Comparison Chart
    const eventsData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.EventsComparison));
    new Chart(document.getElementById('eventsChart'), {
        type: 'bar',
        data: {
            labels: eventsData.map(e => e.eventName),
            datasets: [
                {
                    label: 'Attended',
                    data: eventsData.map(e => e.attended),
                    backgroundColor: 'rgba(25, 135, 84, 0.7)',
                    borderColor: 'rgba(25, 135, 84, 1)',
                    borderWidth: 1
                },
                {
                    label: 'Not Attended',
                    data: eventsData.map(e => e.notAttended),
                    backgroundColor: 'rgba(220, 53, 69, 0.7)',
                    borderColor: 'rgba(220, 53, 69, 1)',
                    borderWidth: 1
                }
            ]
        },
        options: {
            ...chartConfig,
            scales: {
                ...chartConfig.scales,
                x: { ...chartConfig.scales.x, stacked: false },
                y: { ...chartConfig.scales.y, stacked: false }
            }
        }
    });
</script>

