@{
    ViewData["Title"] = "Welcome";
    var activeEvent = ViewBag.ActiveEvent as VivuqeQRSystem.Models.Event;
}

<div class="row min-vh-25 justify-content-center align-items-center py-4">
    <div class="col-lg-10 text-center">
        <div class="mb-4">
            <span class="d-inline-block rounded-circle bg-white p-3 shadow mb-3">
                <i class="fas fa-qrcode fa-3x text-primary"></i>
            </span>
            <h1 class="display-5 fw-bold mb-2 text-light">Welcome to StageUP</h1>
            <h4 class="text-white-50 mb-3">
                Hello, <span class="text-white fw-bold">@User.Identity?.Name</span>!
            </h4>
        </div>

        @if (activeEvent != null)
        {
            <!-- Active Event Card -->
            <div class="card vivuqe-card mb-4 border-success" style="border: 2px solid #10B981 !important;">
                <div class="card-header bg-success bg-opacity-25 d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2 pulse-animation">
                            <i class="fas fa-circle me-1"></i>LIVE
                        </span>
                        <h5 class="mb-0 text-white fw-bold">
                            <i class="fas fa-calendar-check me-2"></i>@activeEvent.Name
                        </h5>
                    </div>
                    <a href="@Url.Action("Details", "Events", new { id = activeEvent.EventId })" class="btn btn-success btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Go to Event
                    </a>
                </div>
                <div class="card-body">
                    <div class="row g-3 text-center">
                        <div class="col-4">
                            <div class="p-2 rounded bg-primary bg-opacity-25">
                                <div class="fs-3 fw-bold text-white">@ViewBag.TotalSeniors</div>
                                <div class="small text-white-50"><i class="fas fa-user-graduate me-1"></i>Seniors</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-2 rounded bg-warning bg-opacity-25">
                                <div class="fs-3 fw-bold text-white">@ViewBag.TotalGuests</div>
                                <div class="small text-white-50"><i class="fas fa-users me-1"></i>Guests</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="p-2 rounded bg-success bg-opacity-25">
                                <div class="fs-3 fw-bold text-white">@ViewBag.AttendedGuests</div>
                                <div class="small text-white-50"><i class="fas fa-check me-1"></i>Attended</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- No Active Event -->
            <div class="alert alert-warning d-inline-flex align-items-center mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <span>No active event. <a href="@Url.Action("Index", "Events")" class="alert-link">Go to Events</a> to activate one.</span>
            </div>
        }

        <div class="d-flex justify-content-center gap-2 flex-wrap">
            @if (activeEvent != null)
            {
                <a href="@Url.Action("Details", "Events", new { id = activeEvent.EventId })" class="btn btn-primary btn-lg px-4 py-2 fw-bold rounded-pill shadow">
                    <i class="fas fa-play me-2"></i>Enter Event
                </a>
            }
            <a href="@Url.Action("Index", "Events")" class="btn btn-outline-light btn-lg px-4 py-2 fw-bold rounded-pill">
                <i class="fas fa-calendar-alt me-2"></i>All Events
            </a>
        </div>
    </div>
</div>

<style>
    .pulse-animation {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
</style>
