@{
    ViewData["Title"] = "Welcome";
}

<div class="row min-vh-25 justify-content-center align-items-center py-5">
    <div class="col-lg-8 text-center">
        <div class="mb-5">
            <span class="d-inline-block rounded-circle bg-white p-4 shadow mb-4">
                <i class="fas fa-qrcode fa-4x text-primary"></i>
            </span>
            <h1 class="display-4 fw-bold mb-3 text-light">Welcome to StageUP</h1>
            <h3 class="h4 text-white-50 mb-4">
                Hello, <span class="text-white fw-bold">@User.Identity?.Name</span>!
            </h3>
            <p class="lead text-white-50 mb-5 mx-auto" style="max-width: 600px;">
                Manage your events, schools, seniors, and guest lists efficiently with our QR-based system.
            </p>
            
            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("Index", "Events")" class="btn btn-primary btn-lg px-4 py-3 fw-bold rounded-pill shadow-lg hover-scale">
                    <i class="fas fa-rocket me-2"></i>Go to Dashboard
                </a>
            </div>
        </div>

        <div class="row g-4 justify-content-center text-start mt-4">
            <div class="col-md-4">
                <div class="card vivuqe-card h-100 border-0 bg-opacity-10 bg-white">
                    <div class="card-body p-4">
                        <div class="rounded-3 bg-primary bg-opacity-25 p-3 d-inline-block mb-3">
                            <i class="fas fa-university fa-2x text-white"></i>
                        </div>
                        <h5 class="fw-bold mb-2">Multi-Event</h5>
                        <p class="text-white-50 small mb-0">Manage multiple schools and universities from a single dashboard.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card vivuqe-card h-100 border-0 bg-opacity-10 bg-white">
                    <div class="card-body p-4">
                        <div class="rounded-3 bg-success bg-opacity-25 p-3 d-inline-block mb-3">
                            <i class="fas fa-qrcode fa-2x text-white"></i>
                        </div>
                        <h5 class="fw-bold mb-2">QR Access</h5>
                        <p class="text-white-50 small mb-0">Generate and verify secure unique QR codes for every senior.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card vivuqe-card h-100 border-0 bg-opacity-10 bg-white">
                    <div class="card-body p-4">
                        <div class="rounded-3 bg-warning bg-opacity-25 p-3 d-inline-block mb-3">
                            <i class="fas fa-users fa-2x text-white"></i>
                        </div>
                        <h5 class="fw-bold mb-2">Guest Lists</h5>
                        <p class="text-white-50 small mb-0">Track guest limits and real-time attendance status.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s ease;
    }
    .hover-scale:hover {
        transform: translateY(-3px);
    }
</style>
