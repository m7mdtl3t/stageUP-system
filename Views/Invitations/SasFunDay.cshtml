    <!-- Script to handle Lock -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Check if already unlocked
            const isUnlocked = localStorage.getItem('stageup_social_unlocked');
            
            if (isUnlocked === 'true') {
                // If unlocked, remove lock immediately (or prevent it from showing)
                document.getElementById('socialLock').style.display = 'none';
                document.getElementById('mainContent').classList.remove('blur-content');
            }
        });

        function unlockContent() {
            // Wait a moment then unlock (simulating user going to app and coming back)
            setTimeout(() => {
                document.getElementById('socialLock').style.opacity = '0';
                document.getElementById('mainContent').classList.remove('blur-content');
                
                // Save state
                localStorage.setItem('stageup_social_unlocked', 'true');
                
                // Remove overlay from DOM after animation
                setTimeout(() => {
                    document.getElementById('socialLock').style.display = 'none';
                }, 500);
            }, 1000); // 1 second delay creates a better "action-reaction" feel
        }
    </script>
