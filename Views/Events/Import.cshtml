@{
    ViewData["Title"] = "Import Seniors";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card vivuqe-card">
            <div class="card-header text-center">
                <h3 class="mb-0">
                    <i class="fas fa-file-csv me-2"></i>Import Seniors
                </h3>
                <p class="text-white-50 mb-0 mt-2">For Event: <strong>@ViewBag.EventName</strong></p>
            </div>
            <div class="card-body">
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger mb-0"></div>
                    </div>
                }

                <div class="alert alert-info d-flex align-items-center mb-4">
                    <i class="fas fa-info-circle fa-2x me-3"></i>
                    <div>
                        <h6 class="alert-heading fw-bold mb-1">Before you start</h6>
                        <p class="mb-0 small">Please download the template to ensure your data is formatted correctly.</p>
                        <a href="@Url.Action("DownloadTemplate")" class="btn btn-sm btn-light mt-2 fw-bold">
                            <i class="fas fa-download me-1"></i>Download Template
                        </a>
                    </div>
                </div>

                <form asp-action="Import" method="post" enctype="multipart/form-data" class="needs-validation">
                    <input type="hidden" name="eventId" value="@ViewBag.EventId" />
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold">Select CSV File</label>
                        <input type="file" name="file" class="form-control" accept=".csv" required />
                        <div class="form-text text-white-50">Allowed file type: .csv</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-upload me-2"></i>Upload and Import
                        </button>
                        <a href="@Url.Action("Details", new { id = ViewBag.EventId })" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
