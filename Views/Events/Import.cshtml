@{
    ViewData["Title"] = "Import Seniors & Guests";
}

<div class="row justify-content-center">
    <div class="col-md-9 col-lg-7">
        <div class="card vivuqe-card">
            <div class="card-header text-center">
                <h3 class="mb-0">
                    <i class="fas fa-file-excel me-2"></i>Import From Excel
                </h3>
                <p class="text-white-50 mb-0 mt-2">For Event: <strong>@ViewBag.EventName</strong></p>
            </div>
            <div class="card-body">
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger mb-0"></div>
                    </div>
                }
                
                @if (TempData["ImportErrors"] != null)
                {
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">Partial Success/Warnings:</h6>
                        <p class="small mb-0">@TempData["ImportErrors"]</p>
                    </div>
                }

                <div class="alert alert-info mb-4">
                    <h6 class="alert-heading fw-bold mb-3"><i class="fas fa-file-import me-2"></i>Choose Import Format</h6>
                    
                    <div class="row g-3">
                        <!-- Option 1: Simple CSV -->
                        <div class="col-md-6 border-end border-secondary">
                            <h6 class="text-success"><i class="fas fa-check-circle me-1"></i>Simple (Recommended)</h6>
                            <p class="small text-white-50 mb-2">Best for quick imports. Use the template provided.</p>
                            <ul class="small mb-2 ps-3">
                                <li>File type: <code>.csv</code></li>
                                <li>Columns: <code>Name</code>, <code>PhoneNumber</code></li>
                            </ul>
                            <a href="@Url.Action("DownloadTemplate")" class="btn btn-sm btn-outline-light mt-1">
                                <i class="fas fa-download me-1"></i>Download CSV Template
                            </a>
                        </div>
                        
                        <!-- Option 2: Advanced Excel -->
                        <div class="col-md-6 ps-md-4">
                            <h6 class="text-primary"><i class="fas fa-database me-1"></i>Advanced (Excel)</h6>
                            <p class="small text-white-50 mb-2">For importing complex data with linked guests.</p>
                            <ul class="small mb-0 ps-3">
                                <li>File type: <code>.xlsx</code></li>
                                <li><strong>Sheet 1:</strong> Seniors (ID, Name, Phone)</li>
                                <li><strong>Sheet 2:</strong> Guests (ID, Name, Phone, SeniorID)</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <form asp-action="Import" method="post" enctype="multipart/form-data" class="needs-validation">
                    <input type="hidden" name="eventId" value="@ViewBag.EventId" />
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold">Select Excel File</label>
                        <input type="file" name="file" class="form-control" accept=".xlsx, .xls" required />
                        <div class="form-text text-white-50">Allowed file types: .xlsx, .xls</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-upload me-2"></i>Upload and Import
                        </button>
                        <a href="@Url.Action("Details", new { id = ViewBag.EventId })" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
