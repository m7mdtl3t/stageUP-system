@model IEnumerable<VivuqeQRSystem.Models.Event>

@{
    ViewData["Title"] = "Events Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">
            <i class="fas fa-university me-2"></i>Events Dashboard
        </h2>
        <p class="text-white-50 mb-0">Select an event to manage</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Event
        </a>
    }
</div>

@if (ViewBag.LegacyCount > 0 && User.IsInRole("Admin"))
{
    <div class="alert alert-warning d-flex justify-content-between align-items-center">
        <div>
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Action Required:</strong> You have @ViewBag.LegacyCount seniors not assigned to any event.
        </div>
        <form asp-action="MigrateLegacy" method="post">
            <button type="submit" class="btn btn-warning btn-sm">
                <i class="fas fa-sync me-1"></i>Migrate to Default Event
            </button>
        </form>
    </div>
}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 vivuqe-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 text-primary">
                            <i class="fas fa-graduation-cap fa-2x"></i>
                        </div>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Archived</span>
                        }
                    </div>
                    
                    <h5 class="card-title fw-bold">@item.Name</h5>
                    
                    <p class="card-text text-white-50 mb-2">
                        <i class="fas fa-calendar-alt me-2 text-primary"></i>
                        @item.Date.ToShortDateString()
                    </p>
                    
                    <p class="card-text text-white-50">
                        <i class="fas fa-map-marker-alt me-2 text-danger"></i>
                        @(string.IsNullOrEmpty(item.Location) ? "No Location" : item.Location)
                    </p>
                    
                    <div class="d-flex gap-2 mb-3">
                        <span class="badge bg-primary">
                            <i class="fas fa-user-graduate me-1"></i>@item.Seniors.Count Seniors
                        </span>
                        <span class="badge bg-info">
                            <i class="fas fa-users me-1"></i>@item.Seniors.Sum(s => s.Guests.Count) Guests
                        </span>
                    </div>

                    @* Live Attendance Stats *@
                    @{
                        var totalGuests = item.Seniors.Sum(s => s.Guests.Count);
                        var attendedGuests = item.Seniors.Sum(s => s.Guests.Count(g => g.IsAttended));
                        var percentage = totalGuests > 0 ? (int)((double)attendedGuests / totalGuests * 100) : 0;
                        var progressColor = percentage switch {
                            >= 100 => "bg-success",
                            >= 75 => "bg-info",
                            >= 50 => "bg-warning",
                            _ => "bg-danger"
                        };
                    }
                    <div class="mt-4 p-3 rounded-3" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);">
                        <div class="d-flex justify-content-between align-items-end mb-2">
                            <div>
                                <h6 class="text-white-50 mb-1 text-uppercase small ls-1">Live Attendance</h6>
                                <h3 class="fw-bold mb-0 text-white">@attendedGuests <span class="fs-6 text-white-50">/ @totalGuests</span></h3>
                            </div>
                            <div class="text-end">
                                <span class="display-6 fw-bold @(percentage == 100 ? "text-success" : "text-warning")">@percentage%</span>
                            </div>
                        </div>
                        <div class="progress" style="height: 10px; background: rgba(255,255,255,0.1);">
                            <div class="progress-bar @progressColor progress-bar-striped progress-bar-animated" role="progressbar" style="width: @percentage%"></div>
                        </div>
                    </div>

                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-outline-primary w-100 mt-2">
                        <i class="fas fa-users me-1"></i>Manage Seniors
                    </a>
                </div>
                
                @if (User.IsInRole("Admin"))
                {
                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between pb-3">
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="text-decoration-none text-white-50">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        
                        <form asp-action="Delete" asp-route-id="@item.EventId" method="post" onsubmit="return confirm('Are you sure? This will delete all seniors and guests in this event.');">
                            <button type="submit" class="btn btn-link text-danger p-0 text-decoration-none">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        </form>
                    </div>
                }
                
                @if (User.IsInRole("Admin"))
                {
                     <div class="card-footer bg-transparent border-top-0 pt-0 pb-3">
                        <a asp-action="TicketSettings" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-warning w-100">
                            <i class="fas fa-ticket-alt me-1"></i>Customize Ticket
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="mb-3">
            <i class="fas fa-calendar-plus fa-4x text-white-50"></i>
        </div>
        <h4 class="text-white-50">No Events Found</h4>
        <p class="text-white-50">Create your first event to get started.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary mt-2">
                <i class="fas fa-plus me-1"></i>Create Event
            </a>
        }
    </div>
}
