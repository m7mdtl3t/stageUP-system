@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>StageUP | QR System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar vivuqe-navbar">
        <div class="container-fluid d-flex flex-wrap justify-content-between align-items-center">
            <a class="navbar-brand vivuqe-brand" href="/">
                <i class="fas fa-qrcode me-1"></i><span class="d-none d-sm-inline">StageUP</span>
            </a>
            
            <!-- Search Boxes (Hidden on mobile) -->
            <div class="d-none d-lg-flex align-items-center gap-3">
                <!-- Senior Search Box -->
                <div class="search-container">
                    <div class="search-label">
                        <i class="fas fa-user-graduate"></i> Seniors
                    </div>
                    <div class="search-box position-relative">
                        <input type="text" id="seniorSearch" class="form-control search-input-box" 
                               placeholder="Search by name or phone..." autocomplete="off" />
                        <div id="seniorResults" class="search-dropdown-box"></div>
                    </div>
                </div>
                
                <!-- Guest Search Box -->
                <div class="search-container">
                    <div class="search-label guest-label">
                        <i class="fas fa-user-friends"></i> Guests
                    </div>
                    <div class="search-box position-relative">
                        <input type="text" id="guestSearch" class="form-control search-input-box" 
                               placeholder="Search by name or phone..." autocomplete="off" />
                        <div id="guestResults" class="search-dropdown-box"></div>
                    </div>
                </div>
            </div>
            
            <!-- Navigation Links - Always Horizontal -->
            <div class="d-flex align-items-center gap-1 gap-sm-2 flex-wrap justify-content-end">
                <a class="nav-link text-light px-1 px-sm-2" href="/Statistics" title="Statistics">
                    <i class="fas fa-chart-line"></i><span class="d-none d-md-inline ms-1">Statistics</span>
                </a>
                <a class="nav-link text-light px-1 px-sm-2" href="/Events/Index" title="Events">
                    <i class="fas fa-calendar-alt"></i><span class="d-none d-md-inline ms-1">Events</span>
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link text-light px-1 px-sm-2" href="/AuditLogs" title="Audit">
                        <i class="fas fa-shield-alt"></i><span class="d-none d-md-inline ms-1">Audit</span>
                    </a>
                    <a class="nav-link text-light px-1 px-sm-2" href="/Users" title="Users">
                        <i class="fas fa-users-cog"></i><span class="d-none d-md-inline ms-1">Users</span>
                    </a>
                }
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <span class="nav-link text-light px-1 px-sm-2 d-none d-sm-inline">
                        <i class="fas fa-user-circle"></i> @User.Identity.Name
                    </span>
                    <form action="/Account/Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm px-1 px-sm-2" title="Logout">
                            <i class="fas fa-sign-out-alt"></i><span class="d-none d-sm-inline ms-1">Logout</span>
                        </button>
                    </form>
                }
            </div>
        </div>
    </nav>
    
    <!-- Floating Back Button -->
    <a href="javascript:history.back()" class="floating-back-btn" title="Go Back">
        <i class="fas fa-arrow-left"></i>
    </a>
    
    <div class="container-xxl py-4">
        @RenderBody()
    </div>

    <footer class="py-4 text-center vivuqe-footer">
        <div class="container">
            <p class="mb-0">
                <i class="fas fa-heart text-danger me-1"></i>
                © @DateTime.Now.Year StageUP - Development By Muhamed Talaat
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Search Scripts -->
    <script>
        let searchTimeout;
        
        // Senior Search
        document.getElementById('seniorSearch').addEventListener('input', function() {
            const query = this.value;
            clearTimeout(searchTimeout);
            
            if (query.length < 2) {
                document.getElementById('seniorResults').classList.remove('show');
                return;
            }
            
            searchTimeout = setTimeout(() => {
                fetch('/Search/SearchSeniors?q=' + encodeURIComponent(query))
                    .then(res => res.json())
                    .then(data => {
                        const dropdown = document.getElementById('seniorResults');
                        if (data.results.length === 0) {
                            dropdown.innerHTML = '<div class="search-result-item no-result"><i class="fas fa-search me-2"></i>No seniors found</div>';
                        } else {
                            dropdown.innerHTML = data.results.map(s => `
                                <a href="/Seniors/Details/${s.seniorId}" class="search-result-item">
                                    <div class="result-main">
                                        <span class="senior-name-color">${s.name}</span>
                                        <span class="phone-color">${s.phoneNumber || ''}</span>
                                        <span class="result-badge">${s.guestsCount}/${s.numberOfGuests}</span>
                                    </div>
                                    <div class="result-sub">
                                        <i class="fas fa-calendar me-1"></i>${s.eventName || 'No Event'}
                                    </div>
                                </a>
                            `).join('');
                        }
                        dropdown.classList.add('show');
                    });
            }, 300);
        });
        
        // Guest Search - with highlight parameter
        document.getElementById('guestSearch').addEventListener('input', function() {
            const query = this.value;
            clearTimeout(searchTimeout);
            
            if (query.length < 2) {
                document.getElementById('guestResults').classList.remove('show');
                return;
            }
            
            searchTimeout = setTimeout(() => {
                fetch('/Search/SearchGuests?q=' + encodeURIComponent(query))
                    .then(res => res.json())
                    .then(data => {
                        const dropdown = document.getElementById('guestResults');
                        if (data.results.length === 0) {
                            dropdown.innerHTML = '<div class="search-result-item no-result"><i class="fas fa-search me-2"></i>No guests found</div>';
                        } else {
                            dropdown.innerHTML = data.results.map(g => `
                                <a href="/Seniors/Details/${g.seniorId}?highlightGuest=${g.guestId}" class="search-result-item">
                                    <div class="result-main">
                                        <span class="guest-name-color">${g.name}</span>
                                        <span class="phone-color">${g.phoneNumber || ''}</span>
                                        ${g.isAttended ? '<span class="badge bg-success ms-2"><i class="fas fa-check"></i></span>' : '<span class="badge bg-warning text-dark ms-2"><i class="fas fa-clock"></i></span>'}
                                    </div>
                                    <div class="result-sub">
                                        <i class="fas fa-link me-1"></i>
                                        <span class="senior-name-color">${g.seniorName}</span>
                                        ${g.seniorPhone ? '<span class="phone-color ms-2">' + g.seniorPhone + '</span>' : ''}
                                        ${g.eventName ? ' • <i class="fas fa-calendar me-1"></i>' + g.eventName : ''}
                                    </div>
                                </a>
                            `).join('');
                        }
                        dropdown.classList.add('show');
                    });
            }, 300);
        });
        
        // Hide dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.search-container')) {
                document.querySelectorAll('.search-dropdown-box').forEach(d => d.classList.remove('show'));
            }
        });
        
        // Show dropdown on focus
        document.querySelectorAll('.search-input-box').forEach(input => {
            input.addEventListener('focus', function() {
                const dropdown = this.nextElementSibling;
                if (dropdown.innerHTML) dropdown.classList.add('show');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>