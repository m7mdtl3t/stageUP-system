@model VivuqeQRSystem.Models.SearchResultViewModel

@{
    ViewData["Title"] = "Search";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card vivuqe-card">
            <div class="card-body">
                <h4 class="mb-3">
                    <i class="fas fa-search me-2"></i>Search Seniors & Guests
                </h4>
                <form method="get" asp-action="Index" class="row g-3">
                    <div class="col-12 col-md-10">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="fas fa-search text-primary"></i>
                            </span>
                            <input type="text" name="q" class="form-control border-start-0 search-input" 
                                   placeholder="Search by name or phone number..." 
                                   value="@Model.Query" autofocus />
                        </div>
                    </div>
                    <div class="col-12 col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-search me-1"></i>Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Query))
{
    <div class="mb-4">
        <h5 class="text-white-50">
            <i class="fas fa-chart-bar me-2"></i>Found @Model.TotalResults result(s) for "@Model.Query"
        </h5>
    </div>

    @if (Model.SeniorResults.Any())
    {
        <div class="card vivuqe-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-user-graduate me-2 text-primary"></i>Seniors
                    <span class="badge bg-primary ms-2">@Model.SeniorResults.Count</span>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-user me-1"></i>Name</th>
                                <th><i class="fas fa-phone me-1"></i>Phone</th>
                                <th><i class="fas fa-users me-1"></i>Guests</th>
                                <th><i class="fas fa-calendar me-1"></i>Event</th>
                                <th class="text-end"><i class="fas fa-cog me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var senior in Model.SeniorResults)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary bg-opacity-25 rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user-graduate text-primary"></i>
                                            </div>
                                            <div>
                                                <strong>@senior.Name</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(senior.PhoneNumber))
                                        {
                                            <span class="text-white-50">
                                                <i class="fas fa-phone me-1"></i>@senior.PhoneNumber
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-white-50">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            @senior.GuestsCount / @senior.NumberOfGuests
                                        </span>
                                    </td>
                                    <td>
                                        @if (senior.EventId.HasValue)
                                        {
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@senior.EventId" class="badge bg-success text-decoration-none">
                                                <i class="fas fa-calendar me-1"></i>@senior.EventName
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-white-50">No Event</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-controller="Seniors" asp-action="Details" asp-route-id="@senior.SeniorId" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (Model.GuestResults.Any())
    {
        <div class="card vivuqe-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-user-friends me-2 text-secondary"></i>Guests
                    <span class="badge bg-secondary ms-2">@Model.GuestResults.Count</span>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-user me-1"></i>Guest Name</th>
                                <th><i class="fas fa-phone me-1"></i>Phone</th>
                                <th><i class="fas fa-check-circle me-1"></i>Status</th>
                                <th><i class="fas fa-user-graduate me-1"></i>Linked Senior</th>
                                <th><i class="fas fa-calendar me-1"></i>Event</th>
                                <th class="text-end"><i class="fas fa-cog me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var guest in Model.GuestResults)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-secondary bg-opacity-25 rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user text-secondary"></i>
                                            </div>
                                            <div>
                                                <strong>@guest.Name</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(guest.PhoneNumber))
                                        {
                                            <span class="text-white-50">
                                                <i class="fas fa-phone me-1"></i>@guest.PhoneNumber
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-white-50">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (guest.IsAttended)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Attended
                                            </span>
                                            @if (guest.AttendanceTime.HasValue)
                                            {
                                                <small class="d-block text-white-50 mt-1">
                                                    @guest.AttendanceTime.Value.ToLocalTime().ToString("g")
                                                </small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Pending
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="linked-senior">
                                            <a asp-controller="Seniors" asp-action="Details" asp-route-id="@guest.SeniorId" class="text-decoration-none">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-link text-primary me-2"></i>
                                                    <div>
                                                        <strong class="text-light">@guest.SeniorName</strong>
                                                        @if (!string.IsNullOrEmpty(guest.SeniorPhoneNumber))
                                                        {
                                                            <small class="d-block text-white-50">@guest.SeniorPhoneNumber</small>
                                                        }
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        @if (guest.EventId.HasValue)
                                        {
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@guest.EventId" class="badge bg-success text-decoration-none">
                                                <i class="fas fa-calendar me-1"></i>@guest.EventName
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-white-50">No Event</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-controller="Seniors" asp-action="Details" asp-route-id="@guest.SeniorId" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-arrow-right me-1"></i>Go to Senior
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (!Model.SeniorResults.Any() && !Model.GuestResults.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-4x text-white-50 mb-3"></i>
            <h4 class="text-white-50">No Results Found</h4>
            <p class="text-white-50">Try searching with a different name or phone number.</p>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-5x text-white-50 mb-4"></i>
        <h4 class="text-white-50">Start Searching</h4>
        <p class="text-white-50 mb-0">Enter at least 2 characters to search for seniors or guests.</p>
        <p class="text-white-50">You can search by name or phone number.</p>
    </div>
}
