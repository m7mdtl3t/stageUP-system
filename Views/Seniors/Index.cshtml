@model VivuqeQRSystem.Models.PaginatedList<VivuqeQRSystem.Models.Senior>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-users me-2"></i>Seniors Management
        <small class="text-white-50 fs-6">(@Model.TotalItems total)</small>
    </h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/Seniors/Index">
            <i class="fas fa-sync-alt me-1"></i>Refresh
        </a>
        @if (User.IsInRole("Admin"))
        {
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="fas fa-plus me-1"></i>Add Senior
        </a>
        }
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
@foreach (var s in Model)
{
    <div class="col">
        <div class="card h-100 vivuqe-card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-graduate fa-3x text-primary mb-2"></i>
                </div>
                <h5 class="card-title">@s.Name</h5>
                <p class="card-text mb-3">
                    <span class="badge vivuqe-badge">
                        <i class="fas fa-users me-1"></i>Guests: @s.NumberOfGuests
                    </span>
                </p>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Details", new { id = s.SeniorId })">
                    <i class="fas fa-eye me-1"></i>View Details
                </a>
            </div>
        </div>
    </div>
}
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-user-plus fa-5x text-white-50 mb-3"></i>
        <h4 class="text-white-50">No Seniors Found</h4>
        <p class="text-white-50">Start by adding your first senior to the system.</p>
        @if (User.IsInRole("Admin"))
        {
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="fas fa-plus me-1"></i>Add First Senior
        </a>
        }
    </div>
}

@if (Model.TotalPages > 1)
{
    <nav aria-label="Seniors pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = 1, eventId = ViewBag.EventId })">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex - 1, eventId = ViewBag.EventId })">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="fas fa-angle-double-left"></i></span>
                </li>
                <li class="page-item disabled">
                    <span class="page-link"><i class="fas fa-angle-left"></i></span>
                </li>
            }
            
            @{
                int startPage = Math.Max(1, Model.PageIndex - 2);
                int endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
            }
            
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, eventId = ViewBag.EventId })">@i</a>
                </li>
            }
            
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex + 1, eventId = ViewBag.EventId })">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.TotalPages, eventId = ViewBag.EventId })">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="fas fa-angle-right"></i></span>
                </li>
                <li class="page-item disabled">
                    <span class="page-link"><i class="fas fa-angle-double-right"></i></span>
                </li>
            }
        </ul>
        <div class="text-center text-white-50 small">
            Showing page @Model.PageIndex of @Model.TotalPages
        </div>
    </nav>
}
