@model IEnumerable<VivuqeQRSystem.Models.User>

@{
    ViewData["Title"] = "User Management";
    var markStats = ViewBag.MarkStats as Dictionary<string, int> ?? new Dictionary<string, int>();
    var unmarkStats = ViewBag.UnmarkStats as Dictionary<string, int> ?? new Dictionary<string, int>();
    var loginStats = ViewBag.LoginStats as Dictionary<string, int> ?? new Dictionary<string, int>();
    var totalActions = ViewBag.TotalActions as Dictionary<string, int> ?? new Dictionary<string, int>();
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card vivuqe-card">
            <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h3 class="mb-0">
                    <i class="fas fa-users-cog me-2"></i>User Management
                </h3>
                <a asp-action="Create" class="btn btn-sm btn-light fw-bold text-primary">
                    <i class="fas fa-plus me-1"></i>Add New User
                </a>
            </div>
            <div class="card-body p-0">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger m-3">
                        @TempData["Error"]
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover table-dark mb-0 align-middle">
                        <thead class="bg-secondary">
                            <tr>
                                <th><i class="fas fa-user"></i><span class="d-none d-sm-inline ms-1">Username</span></th>
                                <th><i class="fas fa-shield-alt"></i><span class="d-none d-sm-inline ms-1">Role</span></th>
                                <th class="text-center"><i class="fas fa-check text-success"></i><span class="d-none d-md-inline ms-1">Mark</span></th>
                                <th class="text-center"><i class="fas fa-undo text-warning"></i><span class="d-none d-md-inline ms-1">Unmark</span></th>
                                <th class="text-center d-none d-lg-table-cell"><i class="fas fa-sign-in-alt text-info"></i><span class="ms-1">Logins</span></th>
                                <th class="text-end"><i class="fas fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var marked = markStats.ContainsKey(item.Username) ? markStats[item.Username] : 0;
                                var unmarked = unmarkStats.ContainsKey(item.Username) ? unmarkStats[item.Username] : 0;
                                var logins = loginStats.ContainsKey(item.Username) ? loginStats[item.Username] : 0;
                                
                                <tr>
                                    <td>
                                        <a asp-action="Activity" asp-route-username="@item.Username" class="text-decoration-none text-white fw-bold">
                                            @item.Username
                                            <i class="fas fa-external-link-alt ms-1 small text-primary"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.Role == "Admin" ? "danger" : "info")">
                                            @item.Role
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success fs-6">@marked</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-warning text-dark fs-6">@unmarked</span>
                                    </td>
                                    <td class="text-center d-none d-lg-table-cell">
                                        <span class="badge bg-info fs-6">@logins</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        @if (User.Identity?.Name != item.Username)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>

                                            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content bg-dark text-white border-secondary">
                                                        <div class="modal-header border-secondary">
                                                            <h5 class="modal-title">Confirm Delete</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete user <strong>@item.Username</strong>?
                                                        </div>
                                                        <div class="modal-footer border-secondary">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <form asp-action="Delete" asp-route-id="@item.Id">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
