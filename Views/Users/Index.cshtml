@model IEnumerable<VivuqeQRSystem.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card vivuqe-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-users-cog me-2"></i>User Management
                </h3>
                <a asp-action="Create" class="btn btn-sm btn-light fw-bold text-primary">
                    <i class="fas fa-plus me-1"></i>Add New User
                </a>
            </div>
            <div class="card-body p-0">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger m-3">
                        @TempData["Error"]
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover table-dark mb-0 align-middle">
                        <thead class="bg-secondary">
                            <tr>
                                <th>Username</th>
                                <th>Role</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Username</div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.Role == "Admin" ? "danger" : "info")">
                                            @item.Role
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <!-- Delete Button Trigger Modal -->
                                        @if (User.Identity.Name != item.Username)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>

                                            <!-- Delete Modal -->
                                            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content bg-dark text-white border-secondary">
                                                        <div class="modal-header border-secondary">
                                                            <h5 class="modal-title">Confirm Delete</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete user <strong>@item.Username</strong>?
                                                        </div>
                                                        <div class="modal-footer border-secondary">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <form asp-action="Delete" asp-route-id="@item.Id">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
