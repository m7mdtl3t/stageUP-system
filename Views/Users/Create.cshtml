@model VivuqeQRSystem.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card vivuqe-card">
            <div class="card-header">
                <h3 class="mb-0">Create New User</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Role" class="form-label">Role</label>
                        <select asp-for="Role" class="form-select" id="roleSelect">
                            <option value="User">User (Read Only - All Events)</option>
                            <option value="Senior">Senior (Read Only - Specific Event)</option>
                            <option value="Admin">Admin (Full Access)</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="mb-4" id="eventSection" style="display:none;">
                        <label asp-for="AssignedEventId" class="form-label">Assign Event (For Senior Role)</label>
                        <select asp-for="AssignedEventId" class="form-select" asp-items="@(new SelectList(ViewBag.Events, "EventId", "Name"))">
                            <option value="">-- Select Event --</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Create User</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('roleSelect').addEventListener('change', function() {
            var eventSection = document.getElementById('eventSection');
            if (this.value === 'Senior') {
                eventSection.style.display = 'block';
            } else {
                eventSection.style.display = 'none';
            }
        });
    </script>
}
