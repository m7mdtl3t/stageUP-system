@model VivuqeQRSystem.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card vivuqe-card">
            <div class="card-header">
                <h3 class="mb-0">Edit User: @Model.Username</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Username" /> <!-- Username is not editable -->
                    
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input value="@Model.Username" class="form-control" disabled />
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="text" class="form-control" placeholder="Enter new password to change" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text text-white-50">Leave as is to keep current password.</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Role" class="form-label">Role</label>
                        <select asp-for="Role" class="form-select">
                            <option value="User">User (Read Only)</option>
                            <option value="Admin">Admin (Full Access)</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg text-dark fw-bold">Save Changes</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
