@model IEnumerable<VivuqeQRSystem.Models.AuditLog>

@{
    ViewData["Title"] = "User Activity";
    var user = ViewBag.User as VivuqeQRSystem.Models.User;
    var markCount = ViewBag.MarkCount as int? ?? 0;
    var unmarkCount = ViewBag.UnmarkCount as int? ?? 0;
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card vivuqe-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <h3 class="mb-0">
                        <i class="fas fa-user-clock me-2"></i>Activity Report: <span class="text-primary">@user?.Username</span>
                    </h3>
                    <small class="text-white-50">
                        <span class="badge bg-@(user?.Role == "Admin" ? "danger" : "info") me-2">@user?.Role</span>
                        Attendance actions history
                    </small>
                </div>
                <a asp-action="Index" class="btn btn-sm btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i>Back to Users
                </a>
            </div>
            <div class="card-body">
                <!-- Stats Summary -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-3">
                        <div class="p-3 rounded bg-success bg-opacity-25 text-center">
                            <div class="fs-2 fw-bold text-success">@markCount</div>
                            <div class="small text-white-50"><i class="fas fa-check me-1"></i>Marked</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 rounded bg-warning bg-opacity-25 text-center">
                            <div class="fs-2 fw-bold text-warning">@unmarkCount</div>
                            <div class="small text-white-50"><i class="fas fa-undo me-1"></i>Unmarked</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 rounded bg-info bg-opacity-25 text-center">
                            <div class="fs-2 fw-bold text-info">@(markCount + unmarkCount)</div>
                            <div class="small text-white-50"><i class="fas fa-history me-1"></i>Total Actions</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 rounded bg-primary bg-opacity-25 text-center">
                            <div class="fs-2 fw-bold text-primary">@(markCount - unmarkCount)</div>
                            <div class="small text-white-50"><i class="fas fa-users me-1"></i>Net Attended</div>
                        </div>
                    </div>
                </div>

                <!-- Activity Log Table -->
                <div class="table-responsive">
                    <table class="table table-hover table-dark mb-0 align-middle">
                        <thead class="bg-secondary">
                            <tr>
                                <th><i class="fas fa-bolt"></i><span class="d-none d-sm-inline ms-1">Action</span></th>
                                <th><i class="fas fa-user"></i><span class="d-none d-sm-inline ms-1">Guest</span></th>
                                <th><i class="fas fa-clock"></i><span class="d-none d-sm-inline ms-1">Time</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-white-50 py-4">
                                        <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                        No attendance actions yet
                                    </td>
                                </tr>
                            }
                            @foreach (var log in Model)
                            {
                                var isMarkAction = log.Action == "Mark" || log.Action == "Attendance";
                                <tr>
                                    <td>
                                        @if (isMarkAction)
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check me-1"></i>Mark
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark fs-6">
                                                <i class="fas fa-undo me-1"></i>Unmark
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-white">@log.Details</span>
                                    </td>
                                    <td>
                                        <span class="text-white-50">
                                            <i class="fas fa-calendar me-1"></i>
                                            @log.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
