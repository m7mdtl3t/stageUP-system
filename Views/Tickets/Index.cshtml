@model VivuqeQRSystem.Models.Guest
@{
    Layout = null;
    var eventName = Model.Senior?.Event?.TicketTitle ?? Model.Senior?.Event?.Name ?? "Event Name";
    var date = Model.Senior?.Event?.TicketDateDisplay ?? Model.Senior?.Event?.Date.ToString("dd MMM yyyy") ?? "Date TBD";
    var location = Model.Senior?.Event?.TicketLocationDisplay ?? Model.Senior?.Event?.Location ?? "Location TBD";
    
    // logic for map link
    var defaultMap = $"https://www.google.com/maps/search/?api=1&query={Uri.EscapeDataString(location)}";
    var mapLink = !string.IsNullOrEmpty(Model.Senior?.Event?.TicketMapUrl) ? Model.Senior?.Event?.TicketMapUrl : defaultMap;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Ticket - @Model.Name</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #0f0c29;
            background-image: linear-gradient(315deg, #0f0c29 0%, #302b63 74%);
            color: #fff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Outfit', sans-serif;
            margin: 0;
            padding: 20px;
        }
        .ticket-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 40px 30px;
            width: 100%;
            max-width: 380px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
            position: relative;
            overflow: hidden;
            text-align: center;
        }
        .ticket-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; height: 6px;
            background: linear-gradient(90deg, #ff00cc, #333399);
        }
        .qr-frame {
            background: white;
            padding: 15px;
            border-radius: 20px;
            display: inline-block;
            margin: 25px 0;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            transition: transform 0.3s ease;
        }
        .qr-frame:hover {
            transform: scale(1.02);
        }
        .guest-name {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(45deg, #fff, #a0a0ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
            line-height: 1.2;
        }
        .event-details {
            color: rgba(255,255,255,0.7);
            font-size: 0.95rem;
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            gap: 15px;
        }
        .ticket-label {
            text-transform: uppercase;
            letter-spacing: 3px;
            font-size: 0.75rem;
            color: #ff00cc;
            font-weight: 700;
            margin-bottom: 15px;
            opacity: 0.9;
        }
        .senior-ref {
            font-size: 0.85rem;
            color: rgba(255,255,255,0.5);
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }
        .logo-text {
            /* Removed absolute positioning to prevent overlap */
            margin-top: 30px;
            text-align: center;
            font-size: 0.7rem;
            color: rgba(255,255,255,0.4);
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .badge-event {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.9rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
    </style>
    <script>
        // Run immediately to prevent flash
        (function() {
            try {
                var token = '@Model.TicketToken';
                var key = 'ticketUnlocked_' + token;
                
                // Check LocalStorage
                var ls = localStorage.getItem(key);
                
                // Check Cookies
                var cookieMatch = document.cookie.match(new RegExp('(^| )' + key + '=([^;]+)'));
                var cookie = cookieMatch ? cookieMatch[2] : null;

                if (ls === 'true' || cookie === 'true') {
                    document.documentElement.className += ' ticket-unlocked';
                    // We need to wait for DOM to modify elements, but we can set a flag
                    window.isTicketUnlocked = true;
                }
            } catch(e) {
                console.error("Storage access error:", e);
            }
        })();
    </script>
    <style>
        /* CSS-based hiding to prevent flash */
        .ticket-unlocked #ticketContent { filter: none !important; }
        .ticket-unlocked #lockOverlay { display: none !important; }
    </style>
</head>
<body>
    <div class="ticket-card">
        <!-- Content Wrapper -->
        <div id="ticketContent" style="filter: blur(10px); transition: filter 0.5s ease;">
            <!-- ... existing content ... -->
            <div class="ticket-label">Official Entry Ticket</div>
            
            <h1 class="guest-name">@Model.Name</h1>
            <div class="event-details">
                <span><i class="fas fa-calendar-alt me-1"></i> @date</span>
                <a href="@mapLink" target="_blank" style="color: rgba(255,255,255,0.7); text-decoration: none; border-bottom: 1px dotted rgba(255,255,255,0.5);">
                    <i class="fas fa-map-marker-alt me-1"></i> @location
                </a>
            </div>
            
            <div class="qr-frame">
                <!-- QR Generates link to Admin Scan Action -->
                <img src="@Url.Action("QrImage", "Tickets", new { token = Model.TicketToken })" width="220" height="220" alt="Ticket QR" class="img-fluid" />
            </div>
            
            <div class="mb-2">
                <span class="badge-event">@eventName</span>
            </div>

            <div class="senior-ref">
            <i class="fas fa-user-graduate me-1"></i> Guest of <strong>@Model.Senior?.Name</strong>
            </div>

            <div class="mt-4 small text-white-50" style="font-size: 0.8rem;">
                Please present this QR code at the entrance.<br/>
                Take a screenshot to save your ticket. ðŸ“¸
            </div>

<div class="logo-text">
                <div style="margin-bottom: 5px; font-weight: 700; color: #ffffff; font-size: 0.9rem; opacity: 1;">Developed By Muhamed Talaat</div>
                <div style="font-size: 0.65rem; opacity: 0.6;">Powered by StageUP</div>
            </div>
        </div>

        <!-- Social Lock Overlay -->
        <div id="lockOverlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); z-index: 10; display: flex; flex-direction: column; justify-content: center; align-items: center; border-radius: 24px;">
            <div class="text-center p-4">
                <i class="fab fa-instagram fa-4x mb-3" style="background: -webkit-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                <h4 class="fw-bold mb-2">Unlock Your Ticket</h4>
                <p class="small text-white-50 mb-4">Follow us on Instagram to reveal your QR Code</p>
                <a href="https://www.instagram.com/stageup_" target="_blank" id="unlockBtn" class="btn btn-light btn-lg rounded-pill fw-bold px-5 shadow">
                    <i class="fab fa-instagram me-2"></i>Follow to Unlock
                </a>
            </div>
        </div>
    </div>
    <script>
        // Post-load script to handle button click and fallback check
        document.addEventListener('DOMContentLoaded', function() {
            if (window.isTicketUnlocked) {
                 document.getElementById('ticketContent').style.filter = 'none';
                 document.getElementById('lockOverlay').style.display = 'none';
            }
        });

        document.getElementById('unlockBtn').addEventListener('click', function() {
            try {
                var token = '@Model.TicketToken';
                var key = 'ticketUnlocked_' + token;
                
                // Save to LocalStorage
                localStorage.setItem(key, 'true');
                
                // Save to Cookie (1 year)
                document.cookie = key + "=true; path=/; max-age=31536000";
            } catch(e) {
                console.error("Storage save error:", e);
            }

            // UI Feedback
            var btn = this;
            btn.innerHTML = '<i class="fas fa-check me-2"></i>Unlocking...';
            
            setTimeout(function() {
                document.getElementById('ticketContent').style.filter = 'none';
                document.getElementById('lockOverlay').style.display = 'none';
            }, 1000); 
        });
    </script>
</body>
</html>
